<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1E0F90"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="TeleMemo"
        app:titleTextColor="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:id="@+id/gridPalabras4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="4"
            android:padding="12dp"
            android:useDefaultMargins="true"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/jugarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugar"
            android:backgroundTint="#1E0F90"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Chronometer
            android:id="@+id/cronometro4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/intentosText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intentos: 0/3"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultadoText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#673AB7"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>